<Window
 x:Class="SevenGuiCounterWpf.CounterWindow"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 xmlns:local="clr-namespace:SevenGuiCounterWpf"
 mc:Ignorable="d"
 Title="7 GUIs Counter WPF"
 Height="450"
 Width="800">
	<StackPanel Orientation="Horizontal" Margin="12" VerticalAlignment="Top">
		<TextBox Text="{Binding CounterValue}" IsReadOnly="True" MinWidth="96"/>
		<Button Content="Count" Command="{Binding ClickCommand}" Margin="12 0 0 0"/>
	</StackPanel>
</Window>
